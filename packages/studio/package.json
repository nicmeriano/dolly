{
  "name": "@nicmeriano/dolly-studio",
  "version": "0.1.0",
  "description": "Post-production studio UI for dolly recordings",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/nicmeriano/dolly.git",
    "directory": "packages/studio"
  },
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "default": "./dist/server/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.server.json --noEmit"
  },
  "dependencies": {
    "@nicmeriano/dolly-core": "workspace:*",
    "@nicmeriano/dolly-schema": "workspace:*",
    "sirv": "^3.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "clsx": "^2.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.0",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0"
  }
}
